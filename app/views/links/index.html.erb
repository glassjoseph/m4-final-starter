
<h1>Welcome to links index, <%= current_user.email %>!</h1>


<div class="form_field">
  <%= form_for @link do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.submit "Add Link" %>
  <% end %>
</div>

<br>

<% @links.each do |link| %>
  <div class="link">
    <li>URL: <%= link_to link.url, link.url %></li>
    <li>Title: <%= link.title %></li>
    <li>Read?: <%= link.read %></li>
  </div>
<% end %>
